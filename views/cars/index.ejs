<% include ../partials/header %>
<% include navbar %>
  <div id="index-banner" class="parallax-container">
    <div class="section no-pad-bot">
      <div class="container">
        <br><br>
      <h1 class="header center grey-text text-darken-2">PICK YOUR CAR</h1>
        <div class="row center">
          <h5 class="header col l12 m12 s12 light grey-text text-lighten-5">A modern car retal site app for everyone</h5>
        </div>
      </div>
    </div>
    <div class="parallax"><img src="https://4.bp.blogspot.com/-EWcWt-EYR7c/VvW3fLmSzsI/AAAAAAAATaU/ggtdAVL1KaEiahoit_bdWLnICnxr8cXTg/s1600/2017-Toyota-GT-86-vs-Scion-FR-S-13.jpg" alt="Unsplashed background img 1"></div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col l12 m12 s12">
        <ul class="collapsible" data-collapsible="accordion">
          <% let i=1; result.forEach((car)=>{ %>
            <% i++; %>
             <% if(car.Category.id === car.category_id && car.status === false){ %>
              <li>
                <div class="collapsible-header"><span class="new badge"><%= i %></span><i class="material-icons">clear_all</i><%= car.Category.category %></div>
                <div class="container ">
                  <div class="row">
                    <div class="col l12 m12 s12">
                      <div class="card">
                        <div class="card-image">
                          <img src="<%= car.image %>">
                          <span class="card-title"><%= car.name %></span>
                          <a class=" btn tooltipped btn-floating halfway-fab waves-effect waves-light red" data-position="left" data-delay="50" data-tooltip="Add Here!"><i class="material-icons">add</i></a>
                        </div>
                        <div class="card-content">
                          <p><%= car.description %></p>
                        </div>
                      </div>
                    </div>
                    <div class="col l12 m12 s12">
                      <ul class="collapsible popout" data-collapsible="accordion">
                         <li>
                           <div class="collapsible-header"><i class="material-icons">filter_drama</i>Manufacture</div>
                           <div class="collapsible-body"><span><%= car.manufacture %></span></div>
                         </li>
                         <li>
                           <div class="collapsible-header"><i class="material-icons">place</i>Color</div>
                           <div class="collapsible-body"><span><%= car.color %></span></div>
                         </li>
                         <li>
                           <div class="collapsible-header"><i class="material-icons">whatshot</i>Price</div>
                           <div class="collapsible-body"><span><%= car.price %></span></div>
                         </li>
                       </ul>
                    </div>
                </div>
                </div>
                <div class="collapsible-header"><p></p></div>
              </li>
            <% } %>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
<% include ../partials/footer %>
